<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?><?import com.jfoenix.controls.JFXTextField?><?import org.kordamp.ikonli.javafx.FontIcon?><?import javafx.geometry.Insets?><?import javafx.scene.control.Separator?><?import com.jfoenix.controls.JFXTextArea?><?import com.jfoenix.validation.RequiredFieldValidator?>
<StackPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <GridPane maxHeight="Infinity" alignment="TOP_CENTER">
            <children>
                <StackPane GridPane.columnIndex="0" GridPane.vgrow="always" >
                    <padding>
                        <Insets top="10" left="10" right="10"/>
                    </padding>
                    <VBox spacing="30">
                        <HBox styleClass="icon-textfield-wrapper" spacing="20">
                            <JFXTextField styleClass="medium-textfield" fx:id="addRoom" promptText="Add a room" />
                            <FontIcon iconLiteral="fas-plus-square" iconSize="20" />
                        </HBox>
                        <VBox spacing="5">
                            <HBox styleClass="icon-textfield-wrapper" spacing="20">
                                <FontIcon iconLiteral="fas-users" iconSize="24" />
                                <Label style="-fx-font-size: 16px">Room 1</Label>
                            </HBox>
                            <HBox styleClass="icon-textfield-wrapper" spacing="20">
                                <FontIcon iconLiteral="fas-users" iconSize="24" />
                                <Label style="-fx-font-size: 16px">Long Room 2</Label>
                            </HBox>
                            <HBox styleClass="icon-textfield-wrapper" spacing="20">
                                <FontIcon iconLiteral="fas-users" iconSize="24" />
                                <Label style="-fx-font-size: 16px">Long Room 3</Label>
                            </HBox>
                        </VBox>
                    </VBox>
                </StackPane>

                <GridPane GridPane.columnIndex="1" GridPane.vgrow="always"  style="-fx-background-color: white">
                    <padding>
                        <Insets left="100" right="100"/>
                    </padding>
                    <VBox GridPane.rowIndex="0" spacing="10">
                        <Label style="-fx-font-size: 24; -fx-padding: 30 0">Room 1</Label>
                        <HBox spacing="10" alignment="TOP_LEFT">
                            <VBox spacing="4">
                                <FontIcon iconLiteral="fas-user" iconSize="50" />
                                <Label>Bastien</Label>
                            </VBox>
                            <VBox spacing="5">
                                <Label style="-fx-border-color: black; -fx-background-color: lightgray; -fx-padding: 10;">Message 1</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightgray; -fx-padding: 10;">Super long message 2</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightgray; -fx-padding: 10;">Super long message 3</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightgray; -fx-padding: 10;">Message 4</Label>
                            </VBox>
                        </HBox>
                        <HBox spacing="10" alignment="TOP_RIGHT">
                            <VBox spacing="5" alignment="TOP_RIGHT">
                                <Label style="-fx-border-color: black; -fx-background-color: lightblue; -fx-padding: 10;">Message 1</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightblue; -fx-padding: 10;">Super long message 2</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightblue; -fx-padding: 10;">Super long message 3</Label>
                                <Label style="-fx-border-color: black; -fx-background-color: lightblue; -fx-padding: 10;">Message 4</Label>
                            </VBox>
                            <VBox spacing="4">
                                <FontIcon iconLiteral="fas-user" iconSize="50" />
                                <Label>Bastien</Label>
                            </VBox>
                        </HBox>
                    </VBox>
                    <StackPane GridPane.rowIndex="1" GridPane.hgrow="always">
                        <HBox alignment="CENTER" spacing="10">
                            <JFXTextArea promptText="Say something..." labelFloat="true" maxHeight="50"></JFXTextArea>
                            <FontIcon iconLiteral="far-paper-plane" iconSize="32" />
                        </HBox>
                    </StackPane>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="10.0" percentHeight="85.0" prefHeight="100.0" />
                        <RowConstraints vgrow="SOMETIMES" minHeight="10.0" percentHeight="15.0" prefHeight="100.0" />
                    </rowConstraints>
                </GridPane>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0" />
            </columnConstraints>
        </GridPane>
    </children>
</StackPane>
